<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.mapper.UserMapper">
	<select id="findOne" resultType="com.example.demo.domain.User">
		select * from userinfo where name=#{name}
	</select>

	<select id="findAll" resultType="com.example.demo.domain.User">
		select * from sysuser
	</select>

	<select id="findRole" resultType="string">
		select * from sysuser where name=#{name}
	</select>

	<select id="findPolicy" resultType="string">
		select * from permission where role=#{role}
	</select>
	
	<insert id="save" useGeneratedKeys="true" keyProperty="id">
		insert ignore into userinfo(name, password) values(#{name},#{password})
	</insert>
	<insert id="saveRole" useGeneratedKeys="true" keyProperty="id">
		insert ignore into sysuser(name, role) values(#{name}, #{role})
	</insert>
	
	<update id="update">
		update userinfo set name=#{name},password=#{password} where id=#{id}
	</update>
	
	<delete id="delete">
		delete from userinfo where name=#{name}
	</delete>

	<delete id="deleteRole">
		delete from sysuser where name=#{name}
	</delete>
</mapper>